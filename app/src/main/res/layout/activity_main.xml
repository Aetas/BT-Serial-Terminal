<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aetas.furstapp.MainActivity">

    <Button
        android:id="@+id/red_button"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:background="@android:color/holo_red_dark"
        android:text="Red"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="@string/red_button"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_connect" />

    <Button
        android:id="@+id/green_button"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/holo_green_dark"
        android:text="Green"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blue_button"
        tools:layout_editor_absoluteX="141dp"
        tools:text="@string/green_button" />

    <Button
        android:id="@+id/blue_button"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginTop="25dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Blue"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/red_button"
        tools:layout_editor_absoluteX="143dp"
        tools:text="@string/blue_button" />

    <Button
        android:id="@+id/bt_connect"
        android:layout_width="57dp"
        android:layout_height="44dp"
        android:layout_marginStart="38dp"
        android:background="@android:drawable/stat_sys_data_bluetooth"
        android:backgroundTint="@color/colorPrimary"
        tools:text="@string/bt_connect"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/edit_message"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="@string/edit_message"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_send"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp" />

    <Button
        android:id="@+id/button_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="SEND"
        app:layout_constraintBaseline_toBaselineOf="@+id/edit_message"
        app:layout_constraintLeft_toRightOf="@+id/edit_message"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="@string/button_send" />

</android.support.constraint.ConstraintLayout>
