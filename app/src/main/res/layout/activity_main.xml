<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aetas.furstapp.MainActivity">

    <Button
        android:id="@+id/red_button"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:background="@android:color/holo_red_dark"
        tools:text="@string/red_button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/green_button"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:background="@android:color/holo_green_dark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="@string/green_button"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/blue_button"
        app:layout_constraintHorizontal_bias="0.498" />

    <Button
        android:id="@+id/blue_button"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:background="@android:color/holo_blue_dark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="@string/blue_button"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/red_button"
        app:layout_constraintHorizontal_bias="0.496" />

    <Button
        android:id="@+id/bt_connect"
        android:layout_width="88dp"
        android:layout_height="54dp"
        android:layout_marginLeft="24dp"
        android:background="@android:drawable/stat_sys_data_bluetooth"
        android:backgroundTint="@color/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="@string/bt_connect"
        android:layout_marginStart="38dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/edit_message"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="@string/edit_message"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_send"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp" />

    <Button
        android:id="@+id/button_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="SEND"
        app:layout_constraintBaseline_toBaselineOf="@+id/edit_message"
        app:layout_constraintLeft_toRightOf="@+id/edit_message"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="@string/button_send" />

</android.support.constraint.ConstraintLayout>
